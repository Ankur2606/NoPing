# Server Configuration
PORT=3000
NODE_ENV=development

# Firebase Configuration
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_PRIVATE_KEY="your_private_key_with_quotes"
FIREBASE_DATABASE_URL=https://your_project_id.firebaseio.com

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Secret for token generation (if needed beyond Firebase)
JWT_SECRET=your_jwt_secret_key_here

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google-callback
FRONTEND_URL=http://localhost:5173

# Email Cron Settings
ENABLE_EMAIL_CRON=true
RUN_EMAIL_CRON_ON_STARTUP=false
EMAIL_CRON_SCHEDULE="0 * * * *"  # Run every hour (cron syntax)

# BSC Network Configuration
BNB_RPC_URL=https://bsc-dataseed.binance.org/
BNB_CHAIN_ID=56 # BSC Mainnet
# BNB_CHAIN_ID=97 # BSC Testnet (uncomment to use testnet instead)

# Smart Contract Information (if using a custom token contract)
BNB_CONTRACT_ADDRESS=your_contract_address_here
# BNB_CONTRACT_ABI should be a stringified JSON of your contract ABI

# Payment Wallet 
PAYMENT_WALLET_ADDRESS=your_payment_wallet_address_here

# NOWPayments Integration (if using)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key_here
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret_here