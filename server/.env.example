# Firebase Configuration
GOOGBNB_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
NETWORK_NAME=BNB Smart Chain Testnet

# BSC Network Configuration
BNB_CHAIN_ID=97

# Wallet for deployment
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# Smart Contract Information
BNB_CONTRACT_ADDRESS=your_contract_address_here
# BNB_CONTRACT_ABI=your_contract_abi_here (stringified JSON)

# Firebase Admin SDK credentials
GOOGLE_APPLICATION_CREDENTIALS=./config/serviceAccountKey.json
FIREBASE_DATABASE_URL=https://your-firebase-project.firebaseio.com
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_FIREBASE_PRIVATE_KEY\n-----END PRIVATE KEY-----\n

# Server Configuration
PORT=8000
NODE_ENV=development

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google-callback
FRONTEND_URL=http://localhost:8080

# Email Cron Settings
ENABLE_EMAIL_CRON=true
RUN_EMAIL_CRON_ON_STARTUP=true
EMAIL_CRON_SCHEDULE="0 * * * *"

# Nebius API Key
NEBIUS_API_KEY=your_nebius_api_key

# Telegram Bot
TELEGRAM_BOT_API_KEY=your_telegram_bot_api_key

# Payment Wallet
PAYMENT_WALLET_ADDRESS=your_payment_wallet_address

# NOWPayments Integration
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret
NOWPAYMENTS_SANDBOX=true

# ElevenLabs Voice Briefing
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ENABLE_VOICE_BRIEFING_CRON=false
RUN_VOICE_BRIEFING_ON_STARTUP=false

# Greenfield Integration
GREENFIELD_PRIVATE_KEY=your_greenfield_private_key
GREENFIELD_BUCKET_NAME=your_greenfield_bucket_name

# OP BNB Testnet
OPBNB_TESTNET_RPC=https://opbnb-testnet-rpc.bnbchain.org
OPBNB_CHAIN_ID=5611

# Email Classification Smart Contract
EMAIL_CLASSIFICATION_CONTRACT_ADDRESS=your_email_classification_contract_address

# Gas Settings
GAS_LIMIT=2000000
GAS_PRICE=1000000000
